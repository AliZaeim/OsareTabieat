@page "/Login/{ReturnUrl?}"
@model Web.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>ورود به کاربری</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/Layout/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Layout/css/RegStyleSheet.css" rel="stylesheet" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
    <!-- //web font -->
    <link rel="canonical" href="https://osaretabieat.ir/Login" />
</head>

<body dir="rtl" lang="fa">
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1>فرم ورود به سایت</h1>
        <h4 class="text-center">بعد از ثبت نام رمز عبور، به تلفن همراه ارسال می گردد</h4>
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form asp-page="Login" method="post">                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Loginvm.RetUrl" />
                    <div class="form-group">
                        <label asp-for="Loginvm.Cellphone" class="control-label text-white"></label>
                        <input asp-for="Loginvm.Cellphone" autofocus class="form-control" />
                        <span asp-validation-for="Loginvm.Cellphone" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Loginvm.Password" class="control-label text-white"></label>
                        <input asp-for="Loginvm.Password" type="password" class="form-control" />
                        <span asp-validation-for="Loginvm.Password" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="Loginvm.RememberMe" id="remember">
                        <label asp-for="Loginvm.RememberMe" class="control-label"></label>
                    </div>

                    <input type="submit" class="btn btn-success" value="ورود">
                </form>
                <p><a href="/Register">ثبت نام در سایت</a></p>
                <p><a href="/">صفحه اصلی</a></p>
            </div>
        </div>

        <ul class="colorlib-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
</body>
</html>