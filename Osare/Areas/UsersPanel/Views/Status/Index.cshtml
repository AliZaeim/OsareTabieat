@model IEnumerable<DataLayer.Entities.Store.Status>

@{
    ViewData["Title"] = "وضعیت های سفارش";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">وضعیت سفارش</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.IsEndofProccess)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Text)
            </td>
                <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.IsEndofProccess)
            </td>
                <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
                <td class="text-xs-center align-middle">
                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
