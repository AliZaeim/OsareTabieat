@model IEnumerable<DataLayer.Entities.Supplementary.BestDeal>
@using Core.Convertors;
@{
    ViewData["Title"] = "قواعد نمایش تخفیف ها";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">قواعد نمایش تخفیف ها</h1>

<p>
    <a asp-action="Create" class="btn btn-success">ثــبت</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>

            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td class="text-xs-center align-middle">
                    @item.StartDate.ToShamsiN()
                </td>
                <td class="text-xs-center align-middle">
                    @item.EndDate.ToShamsiN()
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حــذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
