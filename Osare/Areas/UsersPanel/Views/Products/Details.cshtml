@model DataLayer.Entities.Store.Product
@using Core.Convertors;
@{
    ViewData["Title"] = "جزئیات محصول";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">جزئیات محصول</h1>

<div class="container-fluid">

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinimumInventory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinimumInventory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitofMeasure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Features)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Features)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.UnitofMeasure)
            {
                case "kg":
                    {
                        <span>کیلوگرم</span>
                        break;
                    }
                case "litr":
                    {
                        <span>لیتر</span>
                        break;
                    }
                case "number":
                    {
                        <span>عدد</span>
                        break;
                    }
                default:
                    {
                        <span>کیلوگرم</span>
                        break;
                    }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class="col-sm-10">
            @((Model.ProductType == "pack") ? "بسته بندی" : "فله ای")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PageComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PageComment)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Comment)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PercentDiscount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PercentDiscount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValueDiscount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValueDiscount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShowInMainPage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShowInMainPage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToShamsiN_WithTime()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductGroupId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductGroup!.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">ویرایش</a> <span>|</span>
    <a asp-action="Index">بازگشت</a>
</div>
