            <div class="form-group">
                <label asp-for="DedicatedCode" class="control-label"></label>
                <input asp-for="DedicatedCode" class="form-control" />
                <span asp-validation-for="DedicatedCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>
</div>


<div>
    <a asp-action="Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
