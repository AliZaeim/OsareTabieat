@model IEnumerable<DataLayer.Entities.Supplementary.Slider>

@{
    ViewData["Title"] = "اسلایدها";
   
}

<h1 class="text-xs-center alert alert-info">اسلایدها</h1>

<p>
    <a asp-action="Create">ثبت اسلایدر</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Text1)
            </th>            
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Text2)
            </th>            
            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-xs-center align-middle">
                    <img src="/images/sliders/@item.Image" width="100" height="50">
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Text1)
                </td>                
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Text2)
                </td>                
                <td class="text-xs-center align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
