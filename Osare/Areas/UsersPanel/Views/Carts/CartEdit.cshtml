                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentofFareDuringDelivery" /> @Html.DisplayNameFor(model => model.PaymentofFareDuringDelivery)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShippingByTipax" /> @Html.DisplayNameFor(model => model.ShippingByTipax)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShippingBySnapp" /> @Html.DisplayNameFor(model => model.ShippingBySnapp)
