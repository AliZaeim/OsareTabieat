@model DataLayer.Entities.Store.Product

@{
    ViewData["Title"] = "ثبت کالا";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
    <script src="~/lib/ckeditor/ckeditor.js"></script>
}
<h1 class="text-xs-center alert alert-info">ثبت کالا</h1>
<div class="container-fluid">
    <div class="row">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="ProductGroupId">گروه</label>
                    <select class="form-control" asp-for="ProductGroupId" asp-items="ViewBag.ProductGroupId">
                        <option value="">لطفا گروه محصول را انتخاب کنید...</option>
                    </select>
                    <span asp-validation-for="ProductGroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EnName" class="control-label"></label>
                    <input asp-for="EnName" placeholder="کلمه ها با - از هم جوا شوند" class="form-control" />
                    <span asp-validation-for="EnName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitofMeasure" class="control-label"></label>
                    <select asp-for="UnitofMeasure" class="form-control">
                        <option value="">لطفا واحد اندازه گیری را مشخص کنید</option>
                        <option value="kg">کیلوگرم</option>
                        <option value="gr">گرم</option>
                        <option value="litr">لیتر</option>
                        <option value="cc">سی سی</option>
                        <option value="number">عدد</option>
                    </select>
                    <span asp-validation-for="UnitofMeasure" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MinimumInventory" class="control-label"></label>
                    <input asp-for="MinimumInventory" class="form-control" />
                    <span asp-validation-for="MinimumInventory"  class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <label asp-for="Label" class="control-label"></label>
                    <input asp-for="Label" class="form-control" />
                    <span asp-validation-for="Label" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tags" class="control-label"></label>
                    <input asp-for="Tags" class="form-control" />
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="AsBestSelling" /> @Html.DisplayNameFor(model => model.AsBestSelling)
                    </label>
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <div class="form-group">
                    <label asp-for="PageTitle" class="control-label"></label>
                    <input asp-for="PageTitle" class="form-control" />
                    <span asp-validation-for="PageTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductType" class="control-label"></label>
                    <select asp-for="ProductType" class="form-control">
                        <option value="">لطفا نوع کالا را مشخص کنید</option>
                        <option value="pack">بسته بندی</option>
                        <option value="bulk">فله ای</option>
                    </select>
                    <span asp-validation-for="ProductType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PercentDiscount" class="control-label"></label>
                    <input asp-for="PercentDiscount" class="form-control" />
                    <span asp-validation-for="PercentDiscount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValueDiscount" class="control-label"></label>
                    <input asp-for="ValueDiscount" class="form-control" />
                    <span asp-validation-for="ValueDiscount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HowToUse" class="control-label"></label>
                    <input asp-for="HowToUse" class="form-control" />
                    <span asp-validation-for="HowToUse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>&ensp; (kg)
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BestSellRate" class="control-label"></label>
                    <input asp-for="BestSellRate" class="form-control" />
                    <span asp-validation-for="BestSellRate" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsSpecial" /> @Html.DisplayNameFor(model => model.IsSpecial)
                    </label>
                </div>
                
            </div>
            <div class="col-md-4 col-xs-12">           
                <div class="form-group">
                    <label asp-for="BigImage" class="control-label"></label><span class="text-danger bold"> * </span><span title="نمایش در صفحه جزئیات محصول" class="float-md-left text-danger">50 کیلو بایت، ابعاد: 579*604</span>
                    <input asp-for="BigImage" type="file" class="form-control" />
                    <span asp-validation-for="BigImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BigImageAlt" class="control-label"></label>
                    <input asp-for="BigImageAlt" class="form-control" />
                    <span asp-validation-for="BigImageAlt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SmallImage1" class="control-label"></label><span class="text-danger bold"> * </span><span title="نمایش در لیست محصولات" class="float-md-left  text-danger">50 کیلو بایت، ابعاد: 143*192</span>
                    <input asp-for="SmallImage1" type="file" class="form-control" />
                    <span asp-validation-for="SmallImage1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SmallImage1Alt" class="control-label"></label>
                    <input asp-for="SmallImage1Alt" class="form-control" />
                    <span asp-validation-for="SmallImage1Alt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SmallImage2" class="control-label"></label><span class="text-danger Bold"> * </span><span class="float-md-left  text-danger">50 کیلو بایت، ابعاد: 84*91</span>
                    <input asp-for="SmallImage2" type="file" class="form-control" />
                    <span asp-validation-for="SmallImage2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SmallImage2Alt" class="control-label"></label>
                    <input asp-for="SmallImage2Alt" class="form-control" />
                    <span asp-validation-for="SmallImage2Alt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Features" class="control-label"></label>
                    <input asp-for="Features" class="form-control" placeholder="کلمات با - از هم جدا شوند" />
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <div class="offset-md-3 col-md-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="PageComment" class="control-label"></label>&ensp;<span>(حداقل 70 کاراکتر و حداکثر 150 کاراکتر)</span>&ensp;<span class="float-xs-left" id="pagecommentchars">70</span>
                            <textarea asp-for="PageComment" rows="3" maxlenght="150" class="form-control"></textarea>
                            <span asp-validation-for="PageComment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comment" class="control-label"></label>
                            <textarea asp-for="Comment" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                        <script>
                            CKEDITOR.replace('Comment');
                        </script>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="ShowInMainPage" /> @Html.DisplayNameFor(model => model.ShowInMainPage)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="ثبت" class="btn btn-primary offset-md-4 col-md-4 col-xs-12" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">بازگشت</a>
</div>

@section Scripts {
    <script type="text/javascript">
        function countChar(inobj, maxl, outobj) {
            var len = inobj.value.length;

            if (len >= maxl) {
                inobj.value = inobj.value.substring(0, maxl);
                $(outobj).text(0);
            } else {
                $(outobj).text(maxl - len);
            }
        }
        $(document).ready(function () {
            var curChars = $('#PageComment').val().length;
            var maxchars = 150 - curChars;
            $('#pagecommentchars').text(maxchars);
            $('#PageComment').keyup(function () {
                countChar(this, 150, '#pagecommentchars');
            });


        });

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
