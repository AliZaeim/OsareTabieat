@model Core.DTOs.General.FooterViewModel;
@{
    string address = "کرج، مهرشهر، خیابان رسولی، نبش کوچه پیچک";
    string phone = "026-3225178";
    string workTime = "هر روز هفته، از 10 صبح تا 10 شب";
    if (!string.IsNullOrEmpty(Model.SiteInfo!.Address))
    {
        address = Model.SiteInfo.Address;
    }
    if (!string.IsNullOrEmpty(Model.SiteInfo.Phone1))
    {
        phone = Model.SiteInfo.Phone1;
    }
    if (!string.IsNullOrEmpty(Model.SiteInfo.WorkTime))
    {
        workTime = Model.SiteInfo.WorkTime;
    }

}
