@model IEnumerable<DataLayer.Entities.Supplementary.BannerNextSlider>

@{
    ViewData["Title"] = "بنرها";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">بنرها</h1>

<p>
    <a asp-action="Create" class="btn btn-success">ثبت بنر</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.RegDate)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.BannerNextBase)
            </th>
            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.RegDate)
            </td>
            <td class="text-xs-center align-middle">
                @Html.DisplayFor(modelItem => item.BannerNextBase!.BannerNextBase_ShowingType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
