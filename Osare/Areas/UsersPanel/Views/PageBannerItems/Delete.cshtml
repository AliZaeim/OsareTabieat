@model DataLayer.Entities.Supplementary.PageBannerItem

@{
    ViewData["Title"] = "حذف بنر";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">حــذف بنــر</h1>

<h3 class="text-warning">آیا مطمئن به حذف بنر هستید؟</h3>
<div class="container-fluid">
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text3)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text3)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UrlLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrlLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrlText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrlText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="/images/banners/@Model.Image" width="100" height="50" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageBanner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageBanner!.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
