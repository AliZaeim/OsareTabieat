@model DataLayer.Entities.Store.Cart

@{
    ViewData["Title"] = "ویرایش سفارش";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">ویرایش سفارش</h1>

<div class="container-fluid">
    <div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="PaymentDate" />
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CheckOut" /> @Html.DisplayNameFor(model => model.CheckOut)
