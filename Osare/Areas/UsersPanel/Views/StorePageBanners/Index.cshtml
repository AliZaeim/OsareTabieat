@model IEnumerable<DataLayer.Entities.Supplementary.StorePageBanner>

@{
    ViewData["Title"] = "بنرهای صفحه فروشگاه";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">بنرهای صفحه فروشگاه</h1>

<p>
    <a asp-action="Create" class="btn btn-success">ثبت بنر</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Text1)
            </th>
           
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.LinkUrl)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.LinkText)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            
            <th class="text-xs-center align-middle">
                عملیات
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-xs-center align-middle">
                    <img src="/images/bg/@item.Image" width="100" height="50">
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Text1)
                </td>
                
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.LinkUrl)
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.LinkText)
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
               
                <td class="text-xs-center align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حــذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
